@typeparam T
@inherits FormInputComponentBase<T>

<div class="form-group">
    @if (!string.IsNullOrWhiteSpace(this.Label))
    {
        <label for="@this.Id" class="@($"form-label {this.Required}")"><b>@this.Label</b></label>
    }
    <InputTextArea @attributes="this.AdditionalAttributes" id="@this.Id" name="@this.Id" rows="@this.Rows" cols="@this.Cols" class="@($"form-control {this.CssClass}")" @bind-Value="this.CurrentValueAsString" />
    <ValidationMessage For="@this.ValidationFor" />
</div>