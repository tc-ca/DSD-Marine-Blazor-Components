<button disabled="@this.IsLoading" @onclick="this.OnButtonClick" 
        class="@(string.IsNullOrEmpty(this.Css) ? "btn btn-primary" : this.Css) position-relative @(this.IsLoading ? "button-loading" : "")">
    <span class="button-content">
        @if (this.ChildContent != null)
        {
            @this.ChildContent
        }
        else
        {
            @this.Text
        }
    </span>
</button>