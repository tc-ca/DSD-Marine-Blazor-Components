@using DSD.MSS.Blazor.Components.Core.Constants

@if (EnableShow)
{
    <section class="@(this.ShowIcon ? "alert-icon" : "alert") @this.AlertTypeCssString @(this.Dismisable ? "alert-dismissible" : "") fade show" role="alert">
        @if (this.ShowIcon)
        {
        <div class="icon" aria-hidden="true">
            <i class="fas fa-lg @this.AlertFontAwesomeIconString"></i>
        </div>
        }
        <div class="message">
            @if (!string.IsNullOrEmpty(Title))
            {
                <h5>@Title</h5>
            }
            <p class="mrgn-lft-md">@Message</p>
            <div class="mrgn-lft-md">@ChildContent</div>
        </div>
        @if (Dismisable)
        {
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" color="link" @onclick="HandleCancelClick">
                <span aria-hidden="true">&times;</span>
            </button>
        }
    </section>
}