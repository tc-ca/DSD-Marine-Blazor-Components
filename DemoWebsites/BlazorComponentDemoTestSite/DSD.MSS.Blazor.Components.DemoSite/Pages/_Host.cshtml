@page "/"
@namespace DSD.MSS.Blazor.Components.Core.Demo.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DSD.MSS.Blazor.Components.Core.Demo</title>
    <base href="~/" />
    <link href="fontawesome-free-5.13.0-web/css/all.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Nunito Sans' rel='stylesheet'>
    <link rel="stylesheet" href="_content/DSD.MSS.Blazor.Components.Core/bootstrap/bootstrap.css" />
    <link rel="stylesheet" href="_content/DSD.MSS.Blazor.Components.Core/bootstrap/components.css" />
    <link rel="stylesheet" href="_content/DSD.MSS.Blazor.Components.Core/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="_content/DSD.MSS.Blazor.Components.Core/styles.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="css/components.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.3/moment.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="_content/DSD.MSS.Blazor.Components.Core/script/bootstrap.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- jQuery Language -->
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/i18n/jquery-ui-i18n.min.js"></script>
    <!-- Custom JS -->
    <script src="_content/DSD.MSS.Blazor.Components.Core/script/custom.js"></script>

    <script src="script/bootstrap.js"></script>
    <script src="script/apphelper.js"></script>
    <script>
        $(".checkbox-menu").on("change", "input[type='checkbox']", function () {
            $(this).closest("li").toggleClass("active", this.checked);
        });

        $("input").on("change", function () {
            this.setAttribute(
                "data-date",
                moment(this.value, "YYYY-MM-DD")
                    .format(this.getAttribute("data-date-format"))
            );
            console.log("Change to " + this.value);
        }).trigger("change");

        // jQuery date picker
        function jqueryDatepicker(id, format, lang) {

            console.log("ID = " + id + " | " + format + " | Lang = " + lang);

            elementRef = document.getElementById(id);

            elementRef.onchange = function () {

                console.log("Value = "+document.getElementById(id).value);

                var event = new Event('change');

                elementRef.dispatchEvent(event);

            };

            if (lang == "fr") {

            } else {
                lang = "";
            }

            var options = $.extend({},
                $.datepicker.regional[lang],
                {
                    dateFormat: format, // show date format mm/dd/yy.
                    changeYear: true,
                    changeMonth: true
                }
            );

            $('input[id$=' + id + ']').datepicker(options);
        }

        $(document).on('click', '.allow-focus', function (e) {
            e.stopPropagation();
        });

    </script>
</body>
</html>
